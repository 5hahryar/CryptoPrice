<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/item_price_card"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_alpha"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:layout_below="@id/symbol"/>

            <TextView
                android:id="@+id/price_difference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_alpha"
                android:layout_above="@id/price"
                android:maxLength="7"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:textSize="20sp"
                android:maxLength="9"
                android:maxLines="1"
                android:textColor="@color/text_color"/>

            <View
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/price"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="30dp"
                android:background="@color/divider"/>

            <TextView
                android:id="@+id/marketCapTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/market_cap"
                android:textSize="13sp"
                android:textColor="@color/text_alpha"
                android:layout_toEndOf="@id/divider" />

            <TextView
                android:id="@+id/marketCap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:singleLine="true"
                android:maxLength="15"
                android:textColor="@color/text_color"
                android:layout_below="@id/marketCapTitle"
                android:layout_toEndOf="@id/divider" />

            <TextView
                android:id="@+id/d7Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/d7"
                android:textSize="12sp"
                android:textColor="@color/text_alpha"
                android:layout_toEndOf="@id/d30"
                android:layout_marginStart="50dp"
                android:layout_above="@id/d7"/>

            <TextView
                android:id="@+id/d7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="17sp"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@id/d30"
                android:maxLength="6"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="50dp"/>

            <TextView
                android:id="@+id/d30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:layout_toEndOf="@id/divider"
                android:textSize="17sp"
                android:singleLine="true"
                android:maxLength="6"
                android:textColor="@color/text_color" />

            <TextView
                android:id="@+id/d30Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/d30"
                android:textSize="12sp"
                android:textColor="@color/text_alpha"
                android:layout_toEndOf="@id/divider"
                android:layout_above="@id/d30"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>