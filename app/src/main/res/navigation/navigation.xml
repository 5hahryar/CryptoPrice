<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/priceFragment">

    <fragment
        android:id="@+id/priceFragment"
        android:name="com.shahryar.cryptoprice.prices.PriceFragment"
        android:label="fragment_price" >
        <action
            android:id="@+id/action_priceFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.shahryar.cryptoprice.settings.SettingsFragment"
        android:label="SettingsFragment"/>

</navigation>